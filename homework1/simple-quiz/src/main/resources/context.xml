<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="questionDao" class="ru.otus.spring.simplequiz.dao.impl.SimpleCSVQuestionRepositoryImpl">
        <constructor-arg index="0" value="questions.csv"/>
    </bean>

    <bean id="quizService" class="ru.otus.spring.simplequiz.service.impl.QuizServiceImpl" init-method="init">
        <constructor-arg index="0" ref="questionDao"/>
    </bean>

</beans>